<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/prod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/name_prod"
        tools:ignore="MissingConstraints"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/dateIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/dateIn"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@+id/prod"
        />

    <EditText
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/dateIn"
        android:hint="@string/amount"
        android:inputType="number"
    />

    <EditText
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/priceForOne"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/amount"
        />

    <Button
        android:id="@+id/btnAddProd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/price"
        android:text="@string/addProduct"
        />

    <Button
        android:id="@+id/btnSrcPrd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/srcPrdc"
        />

</androidx.constraintlayout.widget.ConstraintLayout>